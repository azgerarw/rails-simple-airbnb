<h1 class="m-5">Flats with <%= params[:filter]%> <%= " (#{@flats.count})"%></h1>

<div class="container">
  <div class="row">
  <% @flats.each do |flat| %>
    <div class="col-6 col-sm-3 m-5">
      <div class="card mr-5 ml-5"  style="width: 25rem; height: 38rem;">
        <%= image_tag flat.image %>

        <div class="card-body" style="width: 100%; height: 100%;">
          <h5 class="card-title"><%= flat.name%></h5>
          <p class="card-text"><%= flat.description%></p>
          <p class="card-text"><span><i class="fa-solid fa-euro-sign"></i><%= flat.price_per_night %></span> <span><i class="fa-solid fa-people-group"></i><%= flat.number_of_guests %></span></p>
          <a href="/flats/<%= flat.id%>" class="btn btn-primary">More info</a>
          <a href="/flats/<%= flat.id%>/edit" class="btn btn-warning">Edit</a>
          <span ><%= link_to "Remove", flat_path(flat),
          data: {turbo_method: :delete, turbo_confirm: "Are you sure?"}, class: "btn btn-danger" %></span>

        </div>
      </div>
    </div>
  <% end %>
  </div>
</div>
